{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "CLearning Enhancer",
  "version": "0.3.0",
  "description": "CLearningを使いやすくする拡張機能",
  "permissions": [
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://udai.c-learning.jp/*"
  ],
  "background": {
    "service_worker": "background.iife.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://udai.c-learning.jp/*"
      ],
      "js": ["content.iife.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "CLearning Enhancer"
  }
}
