{
  "manifest_version": 3,
  "name": "CLearning Enhancer",
  "version": "0.1.0",
  "description": "CLearningを使いやすくする拡張機能",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CLearning Enhancer"
  },
  "options_page": "options.html"
}
